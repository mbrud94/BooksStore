@if (ViewBag.Title == "BooksList")
{
    using (Ajax.BeginForm("Index", "Books", null, new AjaxOptions { UpdateTargetId = "books-list-partial" }, new { @class = "navbar-form navbar-left" }))
    {
        <div class="form-group">
            <input type="text" class="form-control input-sm" placeholder="Tytuł książki" style="margin-top: 4px;" name="searchString">
        </div>
        <button type="submit" class="btn btn-default btn-sm" style="margin-top: 4px;">Szukaj</button>
    }
}
else
{
    <form class="navbar-form navbar-left" role="search" action="/Books/Index">
        <div class="form-group">
            <input type="text" class="form-control input-sm" placeholder="Tytuł książki" style="margin-top: 4px;" name="searchString">
        </div>
        <button type="submit" class="btn btn-default btn-sm" style="margin-top: 4px;">Szukaj</button>
    </form>
}
